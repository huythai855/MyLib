<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sub_NewBorrow">


    <TextView
        android:id="@+id/txtBorrowDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Ngày trả:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txtBorrowAddress"
        app:layout_constraintTop_toBottomOf="@+id/txtBorrowDate" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Còn lại trong kho"
        android:visibility="invisible"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txtCode"
        app:layout_constraintTop_toBottomOf="@+id/txtCode" />

    <TextView
        android:id="@+id/txtLibrarian2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên thủ thư"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtLibrarian"
        app:layout_constraintStart_toStartOf="@+id/edtBorrowDate"
        app:layout_constraintTop_toTopOf="@+id/txtLibrarian" />

    <TextView
        android:id="@+id/txtLibrarian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Thủ thư:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txtBorrowDate2"
        app:layout_constraintTop_toBottomOf="@+id/txtBorrowDate2" />

    <EditText
        android:id="@+id/edtBorrowDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/txtBorrowDate"
        app:layout_constraintStart_toStartOf="@+id/edtBorrowTel"
        app:layout_constraintTop_toTopOf="@+id/txtBorrowDate"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/edtBorrowDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/txtBorrowDate2"
        app:layout_constraintStart_toStartOf="@+id/edtBorrowDate"
        app:layout_constraintTop_toTopOf="@+id/txtBorrowDate2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/txtBorrowDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Ngày mượn:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txtBorrowAddress"
        app:layout_constraintTop_toBottomOf="@+id/txtBorrowTel" />

    <TextView
        android:id="@+id/txtBorrowTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Số điện thoại:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txtBorrowAddress"
        app:layout_constraintTop_toBottomOf="@+id/txtBorrowAddress" />

    <TextView
        android:id="@+id/txtBorrowAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Địa chỉ/Lớp: "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txtBorrowName"
        app:layout_constraintTop_toBottomOf="@+id/txtBorrowName" />

    <TextView
        android:id="@+id/txtBorrowInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin người mượn"
        android:textColor="@color/xanh_luc_dam"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/txtBookInfo"
        app:layout_constraintTop_toBottomOf="@+id/btnChooseBook" />

    <ImageView
        android:id="@+id/imgBook"
        android:layout_width="100dp"
        android:layout_height="175dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="10dp" />

    <TextView
        android:id="@+id/txtAuthor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Tác giả"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

    <TextView
        android:id="@+id/txtCode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Mã sách"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txtAuthor"
        app:layout_constraintTop_toBottomOf="@+id/txtAuthor" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Tên sách"
        android:textSize="25sp"
        android:textColor="@color/tim_dam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toEndOf="@+id/imgBook"
        app:layout_constraintTop_toTopOf="@+id/imgBook" />

    <TextView
        android:id="@+id/txtNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Số lượng mượn:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txtStatus"
        app:layout_constraintTop_toBottomOf="@+id/txtStatus" />

    <EditText
        android:id="@+id/edtNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtNumber"
        app:layout_constraintTop_toTopOf="@+id/txtNumber"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/btnSave1"
        android:layout_width="100dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLibrarian2"
        app:layout_constraintVertical_bias="0.77"
        app:srcCompat="@drawable/savebutton" />

    <TextView
        android:id="@+id/txtWarningAddBorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Vui lòng điền đầy đủ các thông tin"
        android:textColor="@color/do_dam"
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnSave1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtBookInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin sách"
        android:textColor="@color/xanh_luc_dam"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imgBook"
        app:layout_constraintStart_toStartOf="@+id/imgBook"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChooseBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Chọn sách"
        android:textColor="@color/trang"
        app:layout_constraintStart_toStartOf="@+id/imgBook"
        app:layout_constraintTop_toBottomOf="@+id/imgBook" />

    <TextView
        android:id="@+id/txtBorrowName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Họ và tên:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txtBorrowInfo"
        app:layout_constraintTop_toBottomOf="@+id/txtBorrowInfo" />

    <EditText
        android:id="@+id/edtBorrowPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/txtBorrowName"
        app:layout_constraintStart_toEndOf="@+id/txtBorrowName"
        app:layout_constraintTop_toTopOf="@+id/txtBorrowName"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/edtBorrowAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/txtBorrowAddress"
        app:layout_constraintStart_toStartOf="@+id/edtBorrowPerson"
        app:layout_constraintTop_toTopOf="@+id/txtBorrowAddress" />

    <EditText
        android:id="@+id/edtBorrowTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/txtBorrowTel"
        app:layout_constraintStart_toStartOf="@+id/edtBorrowAddress"
        app:layout_constraintTop_toTopOf="@+id/txtBorrowTel"
        tools:ignore="TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>